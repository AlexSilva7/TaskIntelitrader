@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>    
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Usuarios </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                Criar novo usuario
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped"
style = "width:100%">

    <thead>
        <tr>
            <th> ID </th>
            <th> Nome </th>
            <th> Sobrenome </th>
            <th> Idade </th>
            <th> Data </th>

            <th></th>
        </tr>

    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.ID
                </td>
                <td width="30%">
                    @obj.FirstName
                </td>
                <td width="30%">
                    @obj.Surname
                </td>
                <td width="30%">
                    @obj.Age
                </td>
                <td width="30%">
                    @obj.CreationDate
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller = "User" asp-action = "Edit" asp-route-id = "@obj.ID"
                        class="btn btn-primary mx-2"> 
                            <i class="bi bi-pencil-square"></i>
                            Editar
                        </a>

                        <a asp-controller = "User" asp-action = "Delete" asp-route-id = "@obj.ID"
                        class="btn btn-danger mx-2"> 
                            <i class="bi bi-trash-fill"></i>
                            Deletar
                        </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>

</table>