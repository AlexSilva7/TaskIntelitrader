@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Usuarios </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Usuario" asp-action="Create" class="btn btn-primary">
                Criar novo usuario
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped"
style = "width:100%">

    <thead>
        <tr>
            <th> ID </th>
            <th> Nome </th>
            <th> Sobrenome </th>
            <th> Idade </th>
            <th> Data </th>
        </tr>

    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.ID
                </td>
                <td width="30%">
                    @obj.FirstName
                </td>
                <td width="30%">
                    @obj.Surname
                </td>
                <td width="30%">
                    @obj.Age
                </td>
                <td width="30%">
                    @obj.CreationDate
                </td>
            </tr>
        }

    </tbody>

</table>